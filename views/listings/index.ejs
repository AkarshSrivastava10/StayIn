<% layout('/layouts/boilerplate.ejs') %>
<style>
  .filters{
    display: flex;
    flex-direction:row;
    flex-wrap: nowrap;
    overflow: auto;
    justify-content: center;
    align-items: center;
  }
  .filter{
    text-align:center;
    margin:2rem 2rem 1rem 0;
    opacity: 0.7;
  }
  .filter:hover{
    opacity:1;
    color:#fe424d
  }
  .filter a{
    text-decoration: none;
    color:black;
    opacity: 0.7;
    font-size: 0.8rem;
  }
  .filter a:hover{
    text-decoration: none;
    color:#fe424d;
    opacity: 1;
  }
  .gst{
    display: none;
  }
  .tax-toggle-switch{
    border:1px solid black;
    height:3rem;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 1rem;
    padding:1rem;
    margin-left: 2.5rem;
  }
  .toggle-color{
    background-color:#fe424d !important;
    color:#fe424d !important;
    accent-color: #fe424d !important;
  }
</style>
<body>

  <div class="filters ">
    <div class="filter">
      <div class="filter-icon"><i class="fa-sharp fa-solid fa-fire"></i></div>
      <a href="">Trending</a>
    </div>
    
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-bed"></i></div>
      <a href="">Rooms</a>
    </div>

    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-mountain-city"></i></div>
      <a href="">Iconic cities</a>
    </div>
    
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-mountain"></i></div>
      <a href="">Mountains</a>
    </div>

    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-chess-rook"></i></div>
      <a href="">Castles</a>
    </div>
    
    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-person-swimming"></i></div>
      <a href="">Amazing pools</a>
    </div>

    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-campground"></i></div>
      <a href="">Camping</a>
    </div>

    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-tractor"></i></div>
      <a href="">Farms</a>
    </div>

    <div class="filter">
      <div class="filter-icon"><i class="fa-solid fa-snowman"></i></div>
      <a href="">Artic</a>
    </div>

    <div class="tax-toggle-switch">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Price after tax</label>
      </div>
    </div>

  </div>
  
  
  <!-- <h3>All Listings</h3> -->
  <!-- <form action="/listings/new" method="get"><button>Add new</button></form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(listing of allListings){ %>
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card listing-card" >
          <img src="<%=listing.image.url%>" class="card-img-top" alt="Image loading failed" style="height:20rem;">
              <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listing.tittle%> </b><br>
                    &#8377;<%= listing.price.toLocaleString("en-IN")%>/night
                    <i class="gst"> &nbsp; + 18% GST </i>
                    </p>
              </div>
            </div>
        </a>
     <% }%>
    </div>
</body>

<script>
  let switchToggle=document.querySelector("#switchCheckDefault");
  switchToggle.addEventListener("click",()=>{
    let gst=document.querySelectorAll(".gst");
    for(let i=0 ; i<gst.length;i+=1){
      if(gst[i].style.display==="inline"){
        gst[i].style.display="none";
      }
      else{
        gst[i].style.display="inline";
      }
    }
    switchToggle.classList.toggle("toggle-color");
  })
</script>




    

